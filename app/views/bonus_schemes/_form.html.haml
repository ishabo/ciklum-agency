= form_for @bonus_scheme do |f|
  - if @bonus_scheme.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bonus_scheme.errors.count, "error")} prohibited this bonus_scheme from being saved:"
      %ul
        - @bonus_scheme.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :reason
    = f.text_field :reason
  .field
    = f.label :value
    = f.text_field :value
  .actions
    = f.submit 'Save'
